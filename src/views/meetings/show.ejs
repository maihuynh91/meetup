<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
   
    <main class="container">
      <h1><%= meeting.title %></h1>
     
      <a href="/meetings" class="btn btn-success">Back to Meetings</a>

      <% if(currentUser) { %>
        <a href="/meetings/<%= meeting.id %>/posts/new" class="btn btn-success">New Post</a>
        <% if(currentUser.isAdmin()) { %>
        <a href="/meetings/<%= meeting.id %>/edit" class="btn btn-warning">Edit</a>
        
        <form style="display:initial" action="/meetings/<%= meeting.id %>/destroy" method="post">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <% } %>
      <% } %>

      <p><%= meeting.description %></p>


      <hr>

   <h1>Posts</h1>

   <ul class="list-group">
     <% meeting.posts.forEach((post) => { %>
       <li class="list-group-item">
         <a href="/meetings/<%= meeting.id %>/posts/<%= post.id %>"> <%= post.title %> </a>
       </li>
     <% }) %>
   </ul>


    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>

