<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">
       <br />
   

      <h1>Sign in</h1>

      <form action="/users/sign_in" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="username" class="form-control" name="username" aria-describedby="usernameHelp" placeholder="Enter Username">
          <small class="text-muted" id="emailHelp">username must have at least 3 characters</small>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
          <small class="text-muted" id="emailHelp">email address must be a valid address</small>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
          
        </div>

        <button type="submit" class="btn btn-primary">Sign in</button>
      </form>

     
    </main>
    <% include ../static/partials/messages.ejs %>
    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>