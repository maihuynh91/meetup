<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      
      <h1><%= post.title %></h1>
    
      <a href="/meetings/<%= post.meetingId %>/posts/<%= post.id %>/edit" class="btn btn-warning">Edit</a>
      
      <form style="display:initial" action="/meetings/<%= post.meetingId %>/posts/<%= post.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>

      <p><%= post.body %></p>

      <section id="discussion-form">
        <!-- #1 -->
        <% if(currentUser) { %>
          <% include ../discussions/new.ejs %>
        <% } %>
      </section>     
        <!-- #2 -->
      <section id="discussion-list">
        <% if(post.discussions) { %>
          <% post.discussions.forEach((discussion) => { %>   
    <!-- #3 -->
            <%- include("../discussions/show.ejs", {discussion}) %>
          <% }) %>
        <% } %>
      </section>
     
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
